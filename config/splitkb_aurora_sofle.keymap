#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/* Uncomment this block if using RGB
   &led_strip {
   chain-length = <6>;
// chain-length = <35>; // Uncomment if using both per-key and underglow LEDs
// chain-length = <29>; // Uncomment if using only per-key LEDs.
};
 */

/ {
  keymap {
    compatible = "zmk,keymap";

    default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  ~    |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
// |  ESC  |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |        |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
//               | CTRL| ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | RALT  | RCTRL|
      bindings = <
&kp TILDE &kp N1   &kp N2    &kp N3   &kp N4    &kp N5                   &kp N6 &kp N7   &kp N8    &kp N9   &kp N0   &kp GRAVE
&kp TAB   &kp Q    &kp W     &kp E    &kp R     &kp T                    &kp Y  &kp U    &kp I     &kp O    &kp P    &kp MINUS
&kp ESC   &kp A    &kp S     &kp D    &kp F     &kp G                    &kp H  &kp J    &kp K     &kp L    &kp SEMI &kp SQT
&kp LSHFT &kp Z    &kp X     &kp C    &kp V     &kp B  &trans    &trans  &kp N  &kp M    &kp COMMA &kp DOT  &kp FSLH &kp RSHFT
                   &kp LCTRL &kp LALT &kp LGUI  &mo 1  &kp SPACE &kp RET &mo 2  &kp BSPC &kp RALT  &kp RCTRL 
        >;

      sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
    };

    lower_layer {
// ------------------------------------------------------------------------------------------------------------
// |  |  F1 |  F2 |  F3 |  F4 |  F5 |                   |  F6 |  F7 |  F8 |  F9 | F10  | F11 |
// |  |  1  |  2  |  3  |  4  |  5  |                   |  6  |  7  |  8  |  9  |  0   | F12 |
// |  |  0  |     |     |     |     |                   |  <- |  v  |  ^  |  -> |      |  $  |
// |  |     |     |     |     |     |        |  |       |  +  |  -  |  =  |  [  |   ]  |   \ |
//                |     |     |     |        |  |       |     |     |     |     |
      bindings = <
&trans &kp F1 &kp F2 &kp F3     &kp F4    &kp F5                     &kp F6      &kp F7    &kp F8    &kp F9    &kp F10   &kp F11
&trans &kp N1 &kp N2 &kp N3     &kp N4    &kp N5                     &kp N6      &kp N7    &kp N8    &kp N9    &kp N0    &kp F12
&trans &kp N0 &trans &trans     &trans    &trans                     &kp LEFT    &kp DOWN  &kp UP    &kp RIGHT &trans    &kp DOLLAR
&trans &trans &trans &trans     &trans    &trans      &trans &trans  &kp KP_PLUS &kp MINUS &kp EQUAL &kp LBKT  &kp RBKT  &kp BSLH
              &trans &trans     &trans    &trans      &trans &trans  &trans      &trans    &trans    &trans
        >;

      sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
    };

    raise_layer {
// ------------------------------------------------------------------------------------------------------------
// | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
// |       |     |     |      |      |      |                   |      |       |       |      |       |       |
// |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
// |       |     |  PP | VUP  | VDWN | MUTE |        |  |       |  +   |  -    |  _    |  {   |   }   |  "|"  |
//               |     |      |      |      |        |  |       |      |       |       |      |
      bindings = <
&bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4                    &trans    &trans    &trans    &trans    &trans    &trans
&trans     &trans       &trans       &trans       &trans       &trans                          &trans    &trans    &trans    &trans    &trans    &trans
&kp GRAVE  &kp EXCL     &kp AT       &kp HASH     &kp DOLLAR   &kp PRCNT                       &kp CARET &kp AMPS  &kp STAR  &kp LPAR  &kp RPAR  &kp TILDE
&trans     &trans       &kp K_PP     &kp K_VOL_UP &kp K_VOL_DN &kp K_MUTE      &trans  &trans  &kp PLUS  &kp MINUS &kp UNDER &kp LBRC  &kp RBRC  &kp PIPE
                        &trans       &trans       &trans       &trans          &trans  &trans  &trans    &trans    &trans    &trans
      >;

      sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
    };
  };
};
